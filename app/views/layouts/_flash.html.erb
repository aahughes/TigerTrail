<br><div class="row"><div class="col-sm-12">

<% flash.each do |name, msg| %>

	<% if msg.is_a?(String) and not msg.blank? %>
 		<div class="alert  alert-dismissable <%= name.to_s == 'notice' ? 'alert-success' : 'alert-danger' %>">
      <button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true">
        &times;
      </button>
      <strong><%= msg.html_safe %></strong>
 		</div>
	<% end %>

<% end %>
</div></div>